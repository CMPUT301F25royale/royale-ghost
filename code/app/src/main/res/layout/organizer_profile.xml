<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/number_Change"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:text="Change #"

        app:layout_constraintStart_toStartOf="@+id/PhoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/PhoneNumber" />

    <Button
        android:id="@+id/delete_user_button"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/my_red"
        android:text="Delete Account"
        app:layout_constraintBottom_toBottomOf="@+id/number_Change"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/profile_photo" />

    <TextView
        android:id="@+id/PhoneNumber"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:text="Number:"
        app:layout_constraintEnd_toStartOf="@+id/profile_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_email" />

    <TextView
        android:id="@+id/change_Email"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:text="Email:"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/profile_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_change" />

    <ImageView
        android:id="@+id/profile_photo"
        android:layout_width="166dp"
        android:layout_height="166dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contextClickable="true"
        android:background="@drawable/ic_profile"/>

    <TextView
        android:id="@+id/Change_Name"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:text="Name:"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/profile_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Profile_Title" />

    <TextView
        android:id="@+id/Profile_Title"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:textSize="26sp"
        app:layout_constraintEnd_toStartOf="@+id/profile_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Interests"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="Interests:"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_user_button" />

    <Button
        android:id="@+id/Pass_Reset"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"

        android:text="Reset Password"

        app:layout_constraintBottom_toBottomOf="@+id/change_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="@+id/profile_photo" />

    <Button
        android:id="@+id/change_email"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:text="Change Email"

        app:layout_constraintStart_toStartOf="@+id/change_Email"
        app:layout_constraintTop_toBottomOf="@+id/change_Email" />

    <Button
        android:id="@+id/name_change"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"

        android:text="Change Name"
        app:layout_constraintStart_toStartOf="@+id/Change_Name"
        app:layout_constraintTop_toBottomOf="@+id/Change_Name" />

    <ListView
        android:id="@+id/InterestView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Interests"
        tools:layout_editor_absoluteX="-1dp" />

    <Button
        android:id="@+id/Add_interest"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:text="Add Interest"
        app:layout_constraintBottom_toTopOf="@+id/InterestView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/profile_photo" />

</androidx.constraintlayout.widget.ConstraintLayout>