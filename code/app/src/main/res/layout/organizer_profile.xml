<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/pass_Reset"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/my_red"
        android:text="Delete Account"
        app:layout_constraintBottom_toBottomOf="@+id/PhoneNumber_Input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/profile_photo" />

    <TextView
        android:id="@+id/PhoneNumber"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:text="Change/Add Phone Number"
        app:layout_constraintStart_toStartOf="@+id/PhoneNumber_Input"
        app:layout_constraintTop_toBottomOf="@+id/name_textbox2" />

    <EditText
        android:id="@+id/PhoneNumber_Input"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:hint="temp number"
        app:layout_constraintEnd_toStartOf="@+id/profile_photo"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PhoneNumber" />

    <EditText
        android:id="@+id/name_textbox2"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:hint="temp email"
        app:layout_constraintEnd_toStartOf="@+id/profile_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_Email" />

    <TextView
        android:id="@+id/change_Email"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:textSize="15dp"
        android:text="Change Email"
        app:layout_constraintStart_toStartOf="@+id/name_textbox2"
        app:layout_constraintTop_toBottomOf="@+id/name_textbox" />

    <ImageView
        android:id="@+id/profile_photo"
        android:layout_width="166dp"
        android:layout_height="166dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/Change_Name"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:textSize="15dp"
        android:text="Change Name"
        app:layout_constraintStart_toStartOf="@+id/name_textbox"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/name_textbox"
        android:layout_width="184dp"
        android:layout_height="52dp"
        android:ems="10"
        android:inputType="text"
        android:hint="temp name"
        app:layout_constraintEnd_toStartOf="@+id/profile_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Change_Name" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:textSize="26dp"
        android:text="Profile: Name"
        app:layout_constraintEnd_toStartOf="@+id/profile_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Specialties"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:textSize="30dp"
        android:text="Specialties:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass_Reset" />

    <Button
        android:id="@+id/Pass_Reset"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:text="Reset Password"

        app:layout_constraintBottom_toBottomOf="@+id/name_textbox2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/profile_photo" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Specialties"
        tools:layout_editor_absoluteX="-1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>