<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/number_Change"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:text="Change #"

        app:layout_constraintStart_toStartOf="@+id/PhoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/PhoneNumber" />

    <Button
        android:id="@+id/pass_Reset"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/my_red"
        android:text="Delete Account"
        app:layout_constraintBottom_toBottomOf="@+id/number_Change"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/profile_photo" />

    <TextView
        android:id="@+id/PhoneNumber"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:text="Number:"
        app:layout_constraintEnd_toStartOf="@+id/profile_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_email" />

    <TextView
        android:id="@+id/change_Email"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:text="Email:"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/profile_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_change" />

    <ImageView
        android:id="@+id/profile_photo"
        android:layout_width="166dp"
        android:layout_height="166dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/Change_Name"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:text="Name:"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/profile_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:textSize="26dp"
        android:text="Profile: Name"
        app:layout_constraintEnd_toStartOf="@+id/profile_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Specialties"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="10dp"
        android:text="Specialties:"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass_Reset" />

    <Button
        android:id="@+id/Pass_Reset"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"

        android:text="Reset Password"

        app:layout_constraintBottom_toBottomOf="@+id/change_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="@+id/profile_photo" />

    <Button
        android:id="@+id/change_email"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:text="Change Email"

        app:layout_constraintStart_toStartOf="@+id/change_Email"
        app:layout_constraintTop_toBottomOf="@+id/change_Email" />

    <Button
        android:id="@+id/name_change"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"

        android:text="Change Name"
        app:layout_constraintStart_toStartOf="@+id/Change_Name"
        app:layout_constraintTop_toBottomOf="@+id/Change_Name" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/entrant_notifications_switch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Receive notifications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_Change" />

    <ListView
        android:id="@+id/specialties_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/Specialties"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>