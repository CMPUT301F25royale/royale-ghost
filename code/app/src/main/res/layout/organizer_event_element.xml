<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:textAlignment="center"
        android:id="@+id/organizer_event_seperator"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#808080"/>

    <ImageView
        android:id="@+id/organizer_event_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:contentDescription="Event Image"
        android:background="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/organizer_event_seperator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/organizer_event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/organizer_event_image"/>

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:id="@+id/organizer_event_location"
        app:layout_constraintTop_toBottomOf="@id/organizer_event_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/organizer_event_date"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/organizer_event_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/organizer_event_registration_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/organizer_event_location"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:id="@+id/organizer_event_capacity"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/organizer_event_registration_status"
        android:background="#e0e0e0"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/organizer_event_edit_event_button"
        android:text="Edit"
        android:textSize="14sp"
        android:backgroundTint="@color/black"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/organizer_event_capacity"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/organizer_event_view_entrants_button"
        android:text="Entrants"
        android:backgroundTint="@color/black"
        android:layout_margin="8dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/organizer_event_capacity"
        app:layout_constraintStart_toEndOf="@id/organizer_event_edit_event_button"
        />

    <ImageButton
        android:id="@+id/organizer_event_qr_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_qr_code"
        android:scaleType="fitXY"
        android:background="@null"
        android:contentDescription="@string/back"
        app:layout_constraintTop_toBottomOf="@id/organizer_event_capacity"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>