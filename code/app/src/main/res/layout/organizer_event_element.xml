<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/organizer_event_seperator"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:textAlignment="center"
        android:id="@+id/organizer_event_seperator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <ImageView
        android:id="@+id/organizer_event_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:background="#E0E0E0"
        android:contentDescription="Event Image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/organizer_event_seperator"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/organizer_event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/organizer_event_image"/>

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:id="@+id/organizer_event_location"
        app:layout_constraintTop_toBottomOf="@id/organizer_event_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/organizer_event_date"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/organizer_event_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/organizer_event_registration_status"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/organizer_event_location"
        app:layout_constraintVertical_bias="0.066" />

    <TextView
        android:id="@+id/organizer_event_capacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:id="@+id/organizer_event_capacity"
        android:layout_marginTop="8dp"
        android:background="#e0e0e0"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/organizer_event_registration_status"
        app:layout_constraintVertical_bias="0.095" />

    <Button
        android:id="@+id/organizer_event_edit_event_button"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/organizer_event_edit_event_button"
        android:text="Edit"
        android:textSize="14sp"
        android:backgroundTint="@color/black"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/organizer_event_capacity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/organizer_event_capacity"
        app:layout_constraintVertical_bias="0.529" />

    <Button
        android:id="@+id/organizer_event_view_entrants_button"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/organizer_event_view_entrants_button"
        android:text="Entrants"
        android:backgroundTint="@color/black"
        android:layout_margin="8dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/organizer_event_capacity"
        app:layout_constraintStart_toEndOf="@id/organizer_event_edit_event_button"
        app:layout_constraintTop_toBottomOf="@id/organizer_event_capacity" />

    <ImageButton
        android:id="@+id/organizer_event_qr_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:contentDescription="QR code"
        app:layout_constraintTop_toBottomOf="@id/organizer_event_capacity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.847"
        app:layout_constraintStart_toEndOf="@+id/organizer_event_view_entrants_button"
        app:layout_constraintTop_toBottomOf="@id/organizer_event_capacity"
        app:srcCompat="@android:drawable/ic_secure" />


</androidx.constraintlayout.widget.ConstraintLayout>