<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Back button + title row -->
    <LinearLayout
        android:id="@+id/back_button_and_title_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/organizer_event_view_back_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="0dp"
            android:src="@drawable/back_arrow"
            android:background="@null"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/organizer_entrant_view_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- ðŸ”¹ Map showing entrant locations -->

    <!-- Existing entrants list below the map -->
    <fragment
        android:id="@+id/entrant_map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="408dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toTopOf="@id/organizer_event_entrant_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_button_and_title_container" />

    <ListView
        android:id="@+id/organizer_event_entrant_list"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/entrant_map_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gridLayout"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/organizer_event_entrant_list"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/gridLayout"
        android:alignmentMode="alignMargins"
        android:rowCount="3"
        android:columnCount="2"
        android:orientation="vertical"
        android:paddingHorizontal="8dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:text="@string/show_chosen_entrants"
            android:textSize="16sp"
            android:layout_marginEnd="40dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_cancelled_entrants"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/export_as_csv_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_pill_black"
            app:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="2"
            android:text="@string/export_as_csv"
            android:textSize="16sp" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/show_chosen_entrants_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            app:trackTint="@color/switch_track_selector"
            />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/show_cancelled_entrants_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            app:trackTint="@color/switch_track_selector"
            />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
