<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/organizer_events_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Events"
        android:padding="15dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/organizer_events_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/organizer_events_text"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/organizer_events_list_create_button"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:padding="0dp"
        android:textSize="14sp"
        android:backgroundTint="@color/black"
        android:padding="0dp"
        android:text="Create Event"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/organizer_events_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>