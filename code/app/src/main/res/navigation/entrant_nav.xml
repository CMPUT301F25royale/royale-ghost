<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/entrant_nav"
    app:startDestination="@id/entrant_main_fragment">

    <!-- Home: "Events you've signed up for" -->
    <fragment
        android:id="@+id/entrant_main_fragment"
        android:name="com.example.project_part_3.Users.Entrant_UI.Entrant_main"
        android:label="Entrant Home"
        tools:layout="@layout/entrant_main">

        <action
            android:id="@+id/action_main_to_details"
            app:destination="@id/entrantEventDetailsFragment" />

        <action
            android:id="@+id/action_main_to_search"
            app:destination="@id/entrantSearchFragment" />

        <action
            android:id="@+id/action_main_to_scan"
            app:destination="@id/entrantScanFragment" />

        <action
            android:id="@+id/action_main_to_notifications"
            app:destination="@id/entrantNotificationsFragment" />

        <action
            android:id="@+id/action_main_to_profile"
            app:destination="@id/entrantProfileFragment" />
    </fragment>

    <!-- Search -->
    <fragment
        android:id="@+id/entrantSearchFragment"
        android:name="com.example.project_part_3.Users.Entrant_UI.Entrant_search"
        android:label="Search"
        tools:layout="@layout/entrant_search">

        <action
            android:id="@+id/action_search_to_details"
            app:destination="@id/entrantEventDetailsFragment" />
    </fragment>

    <!-- QR Scanner -->
    <fragment
        android:id="@+id/entrantScanFragment"
        android:name="com.example.project_part_3.Users.Entrant_UI.Entrant_scan"
        android:label="Scan"
        tools:layout="@layout/entrant_scan" />

    <!-- Notifications -->
    <fragment
        android:id="@+id/entrantNotificationsFragment"
        android:name="com.example.project_part_3.Users.Entrant_UI.Entrant_notification"
        android:label="Notifications"
        tools:layout="@layout/entrant_notification" />

    <!-- Profile -->
    <fragment
        android:id="@+id/entrantProfileFragment"
        android:name="com.example.project_part_3.Users.Entrant_UI.Entrant_profile"
        android:label="Profile"
        tools:layout="@layout/entrant_profile" />

    <!--Event Details (shared target) -->
    <fragment
        android:id="@+id/entrantEventDetailsFragment"
        android:name="com.example.project_part_3.Users.Entrant_UI.Entrant_event_details"
        android:label="Event Details"
        tools:layout="@layout/entrant_event_details"/>

<!--        <argument-->
<!--            android:name="eventId"-->
<!--            app:argType="string"-->
<!--            android:defaultValue="" />-->
<!--    </fragment>-->

</navigation>
