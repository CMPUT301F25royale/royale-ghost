<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/entrant_nav"
    app:startDestination="@id/entrant_profile_view">

    <fragment
        android:id="@+id/entrant_profile_view"
        android:name="com.example.project_part_3.Users.Entrant_UI.Entrant_profile.Entrant_profile_view"
        android:label="Entrant_profile_view"
        tools:layout="@layout/entrant_profile">
            <argument
                android:name="userEmail"
                app:argType="string" />
        </fragment>
    <fragment
        android:id="@+id/entrant_main_view"
        android:name="com.example.project_part_3.Users.Entrant_UI.Entrant_event.Entrant_event_view"
        tools:layout="@layout/entrant_main">
        <argument
            android:name="userEmail"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/entrant_search"
        android:name="com.example.project_part_3.Users.Entrant_UI.Entrant_search.Entrant_search_view"
        tools:layout="@layout/entrant_search" >
        <argument
            android:name="userEmail"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/entrant_qr"
        android:name="com.example.project_part_3.Users.Entrant_UI.Entrant_qrscan.Entrant_qrscan_view"
        tools:layout="@layout/entrant_scan" >
            <argument
                android:name="userEmail"
                app:argType="string" />
        </fragment>

    <fragment
        android:id="@+id/entrant_notifications_fragment"
        android:name="com.example.project_part_3.Users.Entrant_UI.Entrant_notifications.Entrant_notifications_fragment"
        android:label="Entrant_notifications"
        tools:layout="@layout/organizer_notifications">

        <argument
            android:name="userEmail"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/entrant_event_detail"
        android:name="com.example.project_part_3.Users.Entrant_UI.Entrant_event.EntrantEventDetailFragment"
        tools:layout="@layout/fragment_entrant_event_detail">

        <argument android:name="title" app:argType="string" />
        <argument android:name="organizerName" app:argType="string" />
        <argument android:name="userEmail" app:argType="string" />
        <!-- (optional) userEmail if you want to pass identity here instead of reading a session -->
    </fragment>
    <fragment
        android:id="@+id/entrant_notification"
        android:name="com.example.project_part_3.Users.Entrant_UI.Entrant_Notification.Entrant_notification_view"
        tools:layout="@layout/entrant_notification"/>
</navigation>